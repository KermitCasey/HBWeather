<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/p1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight=".330"
        android:background="@drawable/black"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/photo1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/scenery_1" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/photo1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/dizhi" />

        <TextView
            android:id="@+id/phototitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/photo1"
            android:layout_alignLeft="@+id/photo1"
            android:text="123"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/p2"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight=".330"
        android:background="@drawable/black"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/photo2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/scenery_1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/photo2"
            android:layout_centerHorizontal="true"
            android:src="@drawable/dizhi" />

        <TextView
            android:id="@+id/phototitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/photo2"
            android:layout_alignLeft="@+id/photo2"
            android:text="123"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/p3"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight=".330"
        android:background="@drawable/black"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/photo3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/scenery_1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/photo3"
            android:layout_centerHorizontal="true"
            android:src="@drawable/dizhi" />

        <TextView
            android:id="@+id/phototitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/photo3"
            android:layout_alignLeft="@+id/photo3"
            android:text="123"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>